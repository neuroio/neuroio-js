{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ES6",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    // Don't emit; allow Babel to transform files.
    "noEmit": true,
    "strict": true,
    // Disallow features that require cross-file information for emit.
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
